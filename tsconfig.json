{
  "include": ["src", "test"],
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,

    "noEmit": true,
    "target": "ES6",
    "module": "ES6"
  }
}
