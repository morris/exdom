{
  "include": ["src", "test"],
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,

    "target": "ES2020",
    "module": "ES2020",
    "noEmit": true
  }
}
